<Window x:Class="DesktopPet.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pet Dashboard" Height="460" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        MouseLeftButtonDown="OnWindowDrag">

    <Window.Resources>
        <!-- Neumorphism Colors -->
        <SolidColorBrush x:Key="NeuroBg" Color="#e0e5ec"/>
        <SolidColorBrush x:Key="NeuroLight" Color="#ffffff"/>
        <SolidColorBrush x:Key="NeuroDark" Color="#a3b1c6"/>
        <SolidColorBrush x:Key="TextDark" Color="#2d3436"/>
        <SolidColorBrush x:Key="TextMuted" Color="#636e72"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0984e3"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#00b894"/>
        
        <!-- Soft Shadow Effect (for raised elements) -->
        <DropShadowEffect x:Key="NeuroShadow" BlurRadius="15" ShadowDepth="6" 
                          Direction="315" Color="#a3b1c6" Opacity="0.6"/>
        
        <DropShadowEffect x:Key="NeuroShadowSmall" BlurRadius="8" ShadowDepth="4" 
                          Direction="315" Color="#a3b1c6" Opacity="0.5"/>
        
        <!-- Neumorphic Toggle Switch -->
        <Style x:Key="NeuroToggle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <!-- Track -->
                            <Border Width="56" Height="28" CornerRadius="14" Background="#d1d9e6"
                                    BorderBrush="#c8d0dc" BorderThickness="1">
                                <Grid>
                                    <!-- Thumb -->
                                    <Border x:Name="thumb" Width="24" Height="24" CornerRadius="12"
                                            HorizontalAlignment="Left" Margin="2,0,0,0"
                                            Background="{StaticResource NeuroBg}">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="6" ShadowDepth="2" 
                                                              Direction="315" Color="#a3b1c6" Opacity="0.7"/>
                                        </Border.Effect>
                                    </Border>
                                    <!-- Status dot -->
                                    <Ellipse x:Name="dot" Width="8" Height="8" Fill="#b2bec3"
                                             HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                            <ContentPresenter Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                                <Setter TargetName="dot" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="dot" Property="Margin" Value="0,0,10,0"/>
                                <Setter TargetName="dot" Property="Fill" Value="{StaticResource AccentGreen}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Neumorphic Slider -->
        <Style x:Key="NeuroSlider" TargetType="Slider">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <!-- Inset Track -->
                            <Border Height="10" CornerRadius="5" Background="#d1d9e6"
                                    BorderBrush="#c8d0dc" BorderThickness="1"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="6" Margin="2" CornerRadius="3" 
                                                        Background="{StaticResource AccentBlue}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Cursor="Hand">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Width="24" Height="24" CornerRadius="12" 
                                                        Background="{StaticResource NeuroBg}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="3" 
                                                                          Direction="315" Color="#a3b1c6" Opacity="0.7"/>
                                                    </Border.Effect>
                                                    <Ellipse Width="10" Height="10" Fill="{StaticResource AccentBlue}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Refined Neumorphic Close Button -->
        <Style x:Key="NeuroCloseButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Inset shadow state (Pressed) -->
                            <Border x:Name="PressedBorder" Background="#d1d9e6" CornerRadius="16" Opacity="0">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#a3b1c6" Offset="0"/>
                                        <GradientStop Color="#ffffff" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.BorderThickness>1</Border.BorderThickness>
                            </Border>

                            <!-- Normal raised state -->
                            <Border x:Name="OuterBorder" Background="{StaticResource NeuroBg}" CornerRadius="16">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="4" Direction="315" Color="#a3b1c6" Opacity="0.6"/>
                                </Border.Effect>
                                <!-- Highlight for depth -->
                                <Border Background="Transparent" CornerRadius="16" BorderThickness="1">
                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="White" Offset="0"/>
                                            <GradientStop Color="Transparent" Offset="0.5"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                </Border>
                            </Border>

                            <!-- Minimalist Icon -->
                            <Path x:Name="CloseIcon" Data="M12,12 L20,20 M20,12 L12,22" 
                                  Stroke="#7f8c8d" StrokeThickness="1.5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                  HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.8"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CloseIcon" Property="Opacity" Value="1"/>
                                <Setter TargetName="CloseIcon" Property="Stroke" Value="#e74c3c"/>
                                <Setter TargetName="OuterBorder" Property="Background" Value="#f5f7f9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PressedBorder" Property="Opacity" Value="1"/>
                                <Setter TargetName="OuterBorder" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="CloseIcon" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="16" CenterY="16"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainBorder" Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.4"/>
                    <DoubleAnimation Storyboard.TargetName="MainScale" Storyboard.TargetProperty="ScaleX"
                                     From="0.95" To="1" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MainScale" Storyboard.TargetProperty="ScaleY"
                                     From="0.95" To="1" Duration="0:0:0.4">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container with Soft Shadow -->
    <Border x:Name="MainBorder" Background="{StaticResource NeuroBg}" CornerRadius="28" Effect="{StaticResource NeuroShadow}" Opacity="0">
        <Border.RenderTransform>
            <ScaleTransform x:Name="MainScale" CenterX="180" CenterY="230"/>
        </Border.RenderTransform>
        <Grid Margin="28">
            <!-- Glassy Shine Overlay -->
            <Border CornerRadius="28" IsHitTestVisible="False" Opacity="0.4">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="0.4"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Pet Dashboard" FontSize="26" FontWeight="Bold" 
                                   Foreground="{StaticResource TextDark}"
                                   FontFamily="Segoe UI Semibold"/>
                        <TextBlock Text="Personalize your desktop companion" FontSize="11" 
                                   Foreground="{StaticResource TextMuted}" Margin="1,4,0,0"/>
                    </StackPanel>
                    
                    <!-- Integrated Close Button -->
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                            Margin="0,2,2,0"
                            Style="{StaticResource NeuroCloseButton}" Click="OnCloseClick"/>
                </Grid>

                <!-- Auto Start Card -->
                <Border CornerRadius="20" Padding="20" Background="{StaticResource NeuroBg}" 
                        Margin="0,0,0,16" Effect="{StaticResource NeuroShadowSmall}">
                    <DockPanel>
                        <StackPanel>
                            <TextBlock Text="Auto Start" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="Launch companion with Windows" FontSize="11" 
                                       Foreground="{StaticResource TextMuted}" Margin="0,3,0,0"/>
                        </StackPanel>
                        <CheckBox x:Name="RunOnStartupCheck" DockPanel.Dock="Right" 
                                  VerticalAlignment="Center" Style="{StaticResource NeuroToggle}"
                                  Checked="OnStartupChecked" Unchecked="OnStartupUnchecked"/>
                    </DockPanel>
                </Border>

                <!-- Size Control Card -->
                <Border CornerRadius="20" Padding="20" Background="{StaticResource NeuroBg}" 
                        Margin="0,0,0,20" Effect="{StaticResource NeuroShadowSmall}">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="Pet Size" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}"/>
                            <!-- Modern Inset Label -->
                            <Border DockPanel.Dock="Right" CornerRadius="10" Padding="12,4"
                                    Background="#d1d9e6" BorderBrush="#c8d0dc" BorderThickness="1">
                                <TextBlock x:Name="SizeLabel" Text="100%" FontSize="12" FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBlue}"/>
                            </Border>
                        </DockPanel>
                        <Slider x:Name="ScaleSlider" Minimum="0.5" Maximum="2.0" Value="1.0" 
                                Style="{StaticResource NeuroSlider}" ValueChanged="OnScaleChanged"/>
                    </StackPanel>
                </Border>

                <!-- Tips Card (Modern Recessed Box) -->
                <Border CornerRadius="20" Padding="20" Background="#d1d9e6" 
                        BorderBrush="#cad3e0" BorderThickness="1.5" Margin="0,0,0,16">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,10">
                            <Path Data="M12,2C6.48,2,2,6.48,2,12s4.48,10,10,10s10-4.48,10-10S17.52,2,12,2z M13,17h-2v-6h2V17z M13,9h-2V7h2V9z"
                                  Fill="{StaticResource AccentBlue}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="Quick Tips" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextDark}"/>
                        </DockPanel>
                        <TextBlock Foreground="#576574" FontSize="11" LineHeight="20">
                            <Run Text="- Hold "/><Run Text="Ctrl" FontWeight="Bold"/><Run Text=" to grab a fading pet"/><LineBreak/>
                            <Run Text="- Click &amp; drag rapidly to "/><Run Text="throw" FontWeight="Bold"/><LineBreak/>
                            <Run Text="- "/><Run Text="Right-click" FontWeight="Bold"/><Run Text=" character for full menu"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Version Footer -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                    <Ellipse Width="6" Height="6" Fill="{StaticResource AccentGreen}" Margin="0,0,6,0"/>
                    <TextBlock Text="System Online v1.0.0" 
                               Foreground="{StaticResource TextMuted}" FontSize="10" FontWeight="Medium"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
